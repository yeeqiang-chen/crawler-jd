<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
	
	<!-- 声明索引目录，磁盘位置 -->
	<bean id="directory" class="org.apache.lucene.store.FSDirectory" factory-method="open">
		<constructor-arg index="0">
			<bean class="java.io.File">
				<constructor-arg index="0" value="index"/>
			</bean>
		</constructor-arg>
	</bean>
	
	<!-- 定义分词器 -->
	<bean id="IKAnalyzer" class="org.wltea.analyzer.lucene.IKAnalyzer"/>
	
	<!-- 配置 -->
	<bean id="indexWriterConfig" class="org.apache.lucene.index.IndexWriterConfig">
		<constructor-arg index="0">
			<bean class="org.apache.lucene.util.Version">
				<constructor-arg index="0" value="4"/>
				<constructor-arg index="1" value="10"/>
				<constructor-arg index="2" value="2"/>
			</bean>
		</constructor-arg>
		<constructor-arg index="1" ref="IKAnalyzer"/>
	</bean>
	
	<!-- 写入索引对象 -->
	<bean id="indexWriter" class="org.apache.lucene.index.IndexWriter" destroy-method="close">
		<constructor-arg index="0" ref="directory"/>
		<constructor-arg index="1" ref="indexWriterConfig"/>
	</bean>
	
</beans>
